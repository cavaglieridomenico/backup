{
  "name": "worldpay-connector",
  "vendor": "hotpointuk",
  "version": "0.1.3",
  "title": "Worldpay",
  "description": "Worldpay connector",
  "mustUpdateAt": "2021-03-23",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "secure-test.worldpay.com",
        "path": "/jsp/merchant/xml/paymentService.jsp"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "secure.worldpay.com",
        "path": "/jsp/merchant/xml/paymentService.jsp"
      }
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexpayments.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "heimdall.vtexpayments.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/oms/pvt/orders/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "cert-xipayapi.paymetric.com",
        "path": "/PMXIGGE/XiPay30WS.asmx"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "xipayapi.paymetric.com",
        "path": "/PMXIGGE/XiPay30WS.asmx"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write"
    }
  ],
  "settingsSchema": {
    "title": "Worldpay",
    "type": "object",
    "properties": {
      "vtexAppKey": {
        "title": "VTEX app key",
        "type": "string",
        "default": "vtex_app_key"
      },
      "vtexAppToken": {
        "title": "VTEX app token (sha-256)",
        "type": "string",
        "default": "04b8b3ac6f561e8cda38d5ae2971a6af3d037a96a51959ef1acad593ac5d8da2"
      },
      "wpUrl": {
        "title": "API Url Worldpay",
        "type": "string"
      },
      "merchantCode": {
        "title": "Merchant Code Worldpay",
        "type": "string"
      },
      "installationID": {
        "title": "Installation ID Worldpay",
        "type": "string"
      },
      "wpusername": {
        "title": "Username Worldpay",
        "type": "string"
      },
      "wppassword": {
        "title": "Password Worldpay",
        "type": "string"
      },
      "paymentAppName": {
        "title": "Payment App Name",
        "type": "string"
      },
      "locale": {
        "title": "Worldpay iFrame language",
        "type": "string",
        "default": "en-gb"
      },
      "wpVersion": {
        "title": "Worldpay API version",
        "type": "string"
      },
      "gcpappkey": {
        "title": "GCP app key",
        "type": "string",
        "default": "vtexappkey-hotpointuk-PFCSOM"
      },
      "gcpapptoken": {
        "title": "GCP app token (sha-256)",
        "type": "string",
        "default": "0d9638780ded191c4dcb55976bca54bcf1fab60d7031aa51604834a3ea87d99e"
      },
      "useXipay": {
        "title": "Xipay enabled",
        "type": "boolean",
        "default": true
      },
      "xipayUrl": {
        "title": "XiPay URL",
        "type": "string"
      },
      "xipayUsername": {
        "title": "XiPay Username",
        "type": "string"
      },
      "xipayPassword": {
        "title": "XiPay Password",
        "type": "string"
      },
      "xipayMerchantid": {
        "title": "XiPay Merchant ID",
        "type": "string"
      },
      "sapmid": {
        "title": "SAP Merchant ID",
        "type": "string"
      },
      "sapgl": {
        "title": "SAP GL Account",
        "type": "string"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
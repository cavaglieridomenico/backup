{
  "name": "bom-redirect",
  "vendor": "hotpointuk",
  "version": "0.0.10",
  "title": "Bom redirects",
  "description": "App to update redirects for new bom pages",
  "mustUpdateAt": "2023-09-27",
  "categories": [],
  "dependencies": {
    "vtex.rewriter": "1.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vtex.rewriter:resolve-graphql"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Bom redirects",
    "type": "object",
    "properties": {
      "disableSitemapEntry": {
        "title": "Disable the sitemap entry",
        "type": "boolean"
      },
      "gcpAppKey": {
        "title": "GCP app key (sha-256)",
        "type": "string",
        "default": "87aca4ad94922bb3e198ea57b72bc9e46b3c617fa0f8bcb3649a216c57953feb"
      },
      "gcpAppToken": {
        "title": "GCP app token (sha-256)",
        "type": "string",
        "default": "d51093483f5fd29d43d5c2021f76808d8e30f1efeaa423a61895a45c37c1060b"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

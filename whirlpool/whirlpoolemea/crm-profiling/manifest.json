{
  "vendor": "whirlpoolemea",
  "name": "crm-profiling",
  "version": "0.0.1",
  "title": "CRM Profiling",
  "description": "IO service to manage profiling optin consent",
  "mustUpdateAt": "2023-05-11",
  "categories": [],
  "dependencies": {
    "vtex.css-handles": "0.x",
    "vtex.apps-graphql": "3.x",
    "vtex.render-runtime": "8.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x",
    "store": "0.x",
    "react": "3.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "billingOptions": {
    "termsURL": "https://compliance.vtex.com/gdpr/policies/vtex-privacy-policy",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "free": true
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    }
  ],
  "settingsSchema": {
    "title": "CRM profiling",
    "type": "object",
    "properties": {
      "sfmcKey": {
        "title": "SFMC token key encrypt in sha256",
        "type": "string"
      },
      "hasNewsletterMDEntity": {
        "title": "Has a Newsletter MD Entity",
        "type": "boolean"
      },
      "newsletterMDEntity": {
        "title": "Newsletter - MD Entity",
        "type": "string",
        "default": "NL"
      },
      "crmProfilingApiEndpoint": {
        "title": "CRM Profiling Api Endpoint",
        "description": "Set the endpoint of the CRM profiling Api call",
        "type": "string",
        "default": "/_v/user/profiling"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

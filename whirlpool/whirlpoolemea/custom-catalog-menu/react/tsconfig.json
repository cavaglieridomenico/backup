{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["DOM", "es2019"],
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
{
  "name": "cart-limiter",
  "vendor": "whirlpoolemea",
  "version": "1.0.1",
  "title": "Cart Limiter",
  "description": "App enabling custom limits to the cart",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "graphql": "1.x",
    "docs": "0.x"
  },
  "billingOptions": {
    "termsURL": "https://compliance.vtex.com/gdpr/policies/vtex-privacy-policy",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "free": true
  },
  "scripts": {},
  "credentialType": "absolute",
  "policies": [
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "AcessaTodosCarrinhos"
    },
    {
      "name": "AcessaTodosPedidos"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "LogisticsAdmin"
    },
    {
      "name": "vbase-read-write"
    }
  ],
  "settingsSchema": {
    "title": "Cart Limiter",
    "type": "object",
    "properties": {
      "authCookie": {
        "title": "Auth cookie",
        "type": "string",
        "default": "VtexIdclientAutCookie_{{account}}"
      },
      "limitMDAs": {
        "title": "Limit on the number of buyable MDAs",
        "type": "object",
        "properties": {
          "status": {
            "title": "Enable limit",
            "type": "boolean"
          },
          "threshold": {
            "title": "Maximum number of buyable MDAs",
            "type": "number",
            "default": 10
          },
          "salesChannels": {
            "title": "List of sales channels (ids comma separated) on which the limit has to be applied",
            "type": "string",
            "default": "2"
          },
          "excludedCategories": {
            "title": "Excluded categories (ids comma separated)",
            "type": "string",
            "default": "2,9,10"
          }
        }
      },
      "limitOrders": {
        "title": "Limit on the number of placeable orders",
        "type": "object",
        "properties": {
          "status": {
            "title": "Enable limit",
            "type": "boolean"
          },
          "counter": {
            "title": "Enable counter",
            "type": "boolean"
          },
          "threshold": {
            "title": "Maximum number of placeable orders",
            "type": "number",
            "default": 6
          },
          "salesChannels": {
            "title": "List of sales channels (ids comma separated) on which the limit has to be applied",
            "type": "string",
            "default": "2"
          },
          "orderEvent": {
            "title": "Order event (used by the counter)",
            "type": "string",
            "default": "payment-approved"
          },
          "fieldNameCounter": {
            "title": "Name of the field keeping track of the placed orders",
            "type": "string",
            "default": "orderLimitCounter"
          },
          "fieldNameDate": {
            "title": "Name of the field keeping track of the date of the last placed order",
            "type": "string",
            "default": "lastPlacedOrderDate"
          }
        }
      },
      "limitMDAQuantity": {
        "title": "Limit on the buyable quantity for each MDA and order",
        "type": "object",
        "properties": {
          "status": {
            "title": "Enable limit",
            "type": "boolean"
          },
          "threshold": {
            "title": "Maximum buyable quantity for each MDA and order",
            "type": "number",
            "default": 3
          },
          "salesChannels": {
            "title": "List of sales channels (ids comma separated) on which the limit has to be applied",
            "type": "string",
            "default": "1,2,3"
          },
          "excludedCategories": {
            "title": "Excluded categories (ids comma separated)",
            "type": "string",
            "default": "2,9,10"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

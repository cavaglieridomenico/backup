{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "es2018.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.graphql"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
{
  "name": "dng-service",
  "vendor": "bauknechtde",
  "version": "1.0.9",
  "title": "D&G Connector",
  "description": "D&G Connector",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "extragarantia.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "D&G",
    "type": "object",
    "properties": {
      "dng": {
        "title": "D&G settings",
        "type": "object",
        "properties": {
          "hostname": {
            "title": "Hostname",
            "type": "string"
          },
          "username": {
            "title": "Username",
            "type": "string"
          },
          "password": {
            "title": "Password",
            "type": "string"
          },
          "client": {
            "title": "Client",
            "type": "string"
          },
          "clientChannel": {
            "title": "Client Channel",
            "type": "string"
          },
          "clientReference": {
            "title": "Client Reference",
            "type": "string"
          },
          "promoCode": {
            "title": "Promo Code (e.g. 10YP)",
            "type": "string"
          },
          "redirectUrl": {
            "title": "Redirect url",
            "type": "string"
          }
        }
      },
      "vtex": {
        "title": "Vtex settings",
        "type": "object",
        "properties": {
          "checkoutAsGuest": {
            "title": "Checkout as Guest",
            "type": "boolean"
          },
          "mdName": {
            "title": "Master Data Entity (e.g. DG)",
            "type": "string"
          },
          "defaultCountry": {
            "title": "Default Country (e.g. DE)",
            "type": "string"
          },
          "legalWarrantyId": {
            "title": "Legal Warranty Id",
            "type": "string"
          },
          "extendedWarrantyId": {
            "title": "Extended Warranty Id",
            "type": "string"
          },
          "commCodeSpecName": {
            "title": "Commercial Code - Specification name",
            "type": "string"
          },
          "enabledAPICredentials": {
            "title": "Allowed API credentials (e.g. key1:value1;key2:value2)",
            "type": "string"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

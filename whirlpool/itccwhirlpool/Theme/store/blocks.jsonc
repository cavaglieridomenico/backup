/* Blocks can be defined both on the store/blocks.json file, and in any number of json
 * files inside the store/blocks directory, with any arbitrary directory structure.
 *
 * Additionally, all blocks files can support comments, such as this one, if given the
 * .jsonc file extension.
 *
 * The store/blocks.json file is intended for backwards compatibility, for miscellaneous
 * blocks, or if the app is simple enough that it doesn't warrant splitting the file.
 */
{
  "store.orderplaced": {
    "blocks": ["order-placed-custom"]
  },
  "store.account": {
    "blocks": ["my-account"],
    "parent": {
      "challenge": "challenge.profile"
    }
  },
  /* "store.product-review-form": {
    "blocks": ["product-review-form"]
  }, */
  "store.not-found#product": {
    "blocks": [
      // "analytics#error",
      "flex-layout.row#page-not-found-product"
    ]
  },
  "store.not-found#search": {
    "blocks": [
      // "analytics#error",
      "flex-layout.row#page-not-found-search"
    ]
  },
  // BLOCCO NOT FOUND
  "flex-layout.row#page-not-found-search": {
    "children": [
      "flex-layout.col#notfound-coltesto",
      "flex-layout.col#notfound-info-search"
    ],
    "props": {
      "marginBottom": 10,
      "marginTop": 10
    }
  },
  "flex-layout.row#page-not-found-product": {
    "children": [
      "flex-layout.col#notfound-coltesto",
      "flex-layout.col#notfound-info-product"
    ],
    "props": {
      "marginBottom": 10,
      "marginTop": 10
    }
  },
  "flex-layout.col#notfound-coltesto": {
    "children": ["flex-layout.row#text-not-found"]
  },
  "flex-layout.row#text-not-found": {
    "children": ["rich-text#not-found"]
  },
  "rich-text#not-found": {
    "props": {
      "textAlignment": "center",
      "textPosition": "center",
      "text": "# OOPS!",
      "blockClass": "notfoundrow"
    }
  },
  "flex-layout.col#notfound-info-product": {
    "children": ["rich-text#not-found-info-product"]
  },
  "rich-text#not-found-info-product": {
    "props": {
      "text": "К сожалению, ничего не найдено.\n - Возможно, при вводе адреса страницы или запроса была допущена ошибка.\n - Вы можете воспользоваться Поиском, перейти на [главную страницу](https://www.whirlpoolgroup.ru/) или воспользоваться [каталогом товаров](https://www.whirlpoolgroup.ru/catalog)."
    }
  },
  "flex-layout.col#notfound-info-search": {
    "children": ["rich-text#not-found-info-search"]
  },
  "rich-text#not-found-info-search": {
    "props": {
      "text": "Siamo spiacenti, non è stato trovato nulla.\n - La pagina è stata rimossa o spostata in un'altra posizione. \n - Puoi utilizzare la funzione di ricerca andare alla [pagina principale.](/)"

    }
  }
}

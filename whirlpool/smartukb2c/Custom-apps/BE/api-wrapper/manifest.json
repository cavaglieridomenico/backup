{
  "name": "api-wrapper",
  "vendor": "smartukb2cqa",
  "version": "0.0.1",
  "title": "VTEX API wrapper",
  "description": "Wrapper for frontend api calls",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Wrapper",
    "type": "object",
    "properties": {
      "appKeyQA": {
        "title": "VTEX appKey for QA",
        "type": "string"
      },
      "appTokenQA": {
        "title": "VTEX appToken for QA",
        "type": "string"
      },
      "appKeyPROD": {
        "title": "VTEX appKey for PRODUCTION",
        "type": "string"
      },
      "appTokenPROD": {
        "title": "VTEX appToken for PRODUCTION",
        "type": "string"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

{
  "memory": 256,
  "ttl": 10,
  "timeout": 120,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "events": {
    "orderConfirmationEvent": {
      "sender": "vtex.orders-broadcast",
      "topics": [
        "approve-payment"
      ]
    },
    "orderCancellationEvent": {
      "sender": "vtex.orders-broadcast",
      "topics": [
        "cancel"
      ]
    },
    "backInStockEvent" : {
      "sender" : "smartukb2c.smartb2c-uk",
      "topics" : [
        "back-in-stock"
      ]
    }
  },
  "routes": {
    "confirmOrder": {
      "path": "/v1/api/order/confirm",
      "public": true
    },
    "cancelOrder": {
      "path": "/v1/api/order/cancel",
      "public": true
    },
    "backInStock": {
      "path": "/v1/api/back-in-stock",
      "public": true
    }
  }
}

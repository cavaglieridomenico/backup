{
  "name": "api-wrapper",
  "vendor": "hotpointit",
  "version": "0.3.1",
  "title": "VTEX API wrapper",
  "description": "Wrapper for frontend api calls",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "graphql": "1.x",
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "vtexid.vtex.com.br",
        "path": "*"
      }
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/dataentities/*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "ListOrders"
    },
    {
      "name": "LogisticsAdmin"
    },
    {
      "name": "read_prices"
    },
    {
      "name": "GetPolicy"
    },
    {
      "name": "ListPolicies"
    },
    {
      "name": "GerenciarPromocoesETarifas"
    }
  ],
  "settingsSchema": {
    "title": "Wrapper",
    "type": "object",
    "properties": {
      "authcookie": {
        "title": "User auth cookie",
        "type": "string",
        "default": "VtexIdclientAutCookie_{{account}}"
      },
      "servicesPerSC": {
        "title": "Additional services per sales channel",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "scid": {
              "title": "sales channel id",
              "type": "string"
            },
            "services": {
              "title": "Sevices ids",
              "description": "Services available in the sales channel (comma separated)",
              "type": "string"
            },
            "installationId": {
              "title": "Id of the service \"Installation\"",
              "type": "string"
            }
          }
        }
      },
      "serviceInfo": {
        "title": "Service info",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "title": "Ids (comma separated)",
              "type": "string"
            },
            "name": {
              "title": "Name",
              "type": "string"
            },
            "description": {
              "title": "Description",
              "type": "string"
            },
            "position": {
              "title": "Position",
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "locale": {
        "title": "Locale (e.g. it-IT)",
        "type": "string",
        "default": "it-IT"
      },
      "currencySymbol": {
        "title": "Currency symbol (e.g. €)",
        "type": "string",
        "default": "€"
      },
      "isMarketplace": {
        "title": "Marketplace",
        "type": "boolean"
      },
      "sellerAccount": {
        "title": "Seller account",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "apiKey": {
            "title": "Api key",
            "type": "string"
          },
          "apiToken": {
            "title": "Api token",
            "type": "string"
          }
        }
      },
      "retrievePromoParam": {
        "type": "object",
        "title": "Parameters for retrieve Promo ",
        "properties": {
          "timezone": {
            "type": "string",
            "title": "Timezone"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}

{
  "memory": 256,
  "ttl": 20,
  "timeout": 20,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "events": {
    "someStates": {
      "sender": "vtex.orders-broadcast",
      "topics": ["payment-approved"]
    },
    "backInStock": {
      "keys": ["back-in-stock"]      
    }
  },
  "routes": {
    "confirmOrder": {
      "path": "/v1/api/order/confirm",
      "public": true
    },
    "canceledOrder": {
      "path": "/v1/api/order/canceled",
      "public": true
    },
    "catalogUpload": {
      "path": "/v1/api/catalogs/sfmc/get/catalog",
      "public": true
    },
    "refundOrder": {
      "path": "/v1/api/order/refund",
      "public": true
    },
    "returnOrder": {
      "path": "/v1/api/order/return",
      "public": true
    },
    "getProductRecommendations": {
      "path": "/app/sfmc/recommendations",
      "public": true
    }
  }
}
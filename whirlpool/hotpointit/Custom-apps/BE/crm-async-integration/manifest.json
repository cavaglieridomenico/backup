  "settingsSchema": {
    "title": "CRM connector",
    "type": "object",
    "properties": {
      "crmEnvironment": {
        "title": "CRM environment",
        "type": "string",
        "enum": [
          "production",
          "quality"
        ],
        "default": "quality"
      },
      "crmPassword": {
        "title": "CRM password",
        "type": "string"
      },
      "gcpAuthType": {
        "title": "GCP - Authentication type",
        "type": "string",
        "enum": [
          "Bearer",
          "Basic"
        ],
        "default": "Bearer"
      },
      "gcpHost": {
        "title": "GCP - Host",
        "type": "string"
      },
      "gcpProjectId": {
        "title": "GCP - Project id",
        "type": "string"
      },
      "gcpClientEmail": {
        "title": "GCP - Client email (or Username)",
        "type": "string"
      },
      "gcpPrivateKey": {
        "title": "GCP - Private key (or Password)",
        "type": "string"
      },
      "gcpTargetAudience": {
        "title": "GCP - Target audience",
        "type": "string"
      },
      "gcpBrand": {
        "title": "GCP - Brand",
        "type": "string",
        "default": "HP"
      },
      "gcpCountry": {
        "title": "GCP - Country",
        "type": "string",
        "default": "IT"
      },
      "authCookie": {
        "title": "Authentication cookie",
        "type": "string",
        "default": "VtexIdclientAutCookie_{{account}}"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
